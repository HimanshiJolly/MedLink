<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('includes/head') %>
    <link rel="stylesheet" href="styles/medicine.css">
    <script src="js/medicine.js"></script>
    
</head>
<body>
    <%- include('includes/header') %>

    <section class="search-section">
        <div class="search-content">
            <h2>Buy Medicines and Essentials</h2>
            <div class="search-bar">
                <input type="text" placeholder="Search Medicines">
                <button>üîç</button>
                <a href="/cart" class="cart-icon">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span id="cart-count">0</span>
                </a>
            </div>
        </div>
    </section>

    
    <section class="hero">
        <div class="container">
            <div class="hero-items">
                <div class="hero-item">
                    <img src="https://i.pinimg.com/736x/91/db/35/91db35d4cb14819cd525f952db2d0d2a.jpg" alt="Order Medicine">
                    <h3>Order Medicine</h3>
                </div>
                <div class="hero-item">
                    <img src="https://i.pinimg.com/736x/25/67/91/2567919dc66fcfd9d932a779df38f00c.jpg" alt="Order by Prescription">
                    <h3>Order by Prescription</h3>
                </div>
                <div class="hero-item">
                    <img src="https://i.pinimg.com/736x/24/59/c9/2459c9c43d365d7e0759e0271bcddef5.jpg" alt="Reorder Medicine">
                    <h3>Reorder Medicine</h3>
                </div>
                <div class="hero-item">
                    <img src="https://i.pinimg.com/736x/15/22/b5/1522b54572eb1973d98622f7733648a7.jpg" alt="Shop by Category">
                    <h3>Shop by Category</h3>
                </div>
            </div>
        </div>
    </section>

    <section class="slider">
        <div class="slides">
            <% sliderImages.forEach(image => { %>
                <a href="<%= image.link %>">
                    <img src="<%= image.src %>" alt="<%= image.alt %>">
                </a>
            <% }); %>
        </div>
        <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
        <button class="next" onclick="moveSlide(1)">&#10095;</button>
    </section>
    

    <section class="products">
        <h2>Best of Ayurvedic, Siddha & Unani</h2>
        <div class="slider-container">
            <button class="prev-slide">&#10094;</button>
            <div class="product-slider">
                <% medicines.forEach(medicine => { %> 
                    <div class="product-card">
                        <img src="<%= medicine.image %>" alt="<%= medicine.name %>">
                        <h3><%= medicine.name %></h3>
                        <p>‚Çπ <%= medicine.price.toFixed(2) %> <span class="old-price">‚Çπ <%= medicine.oldPrice.toFixed(2) %></span></p>
                        <p class="discount">GET <%= ((medicine.oldPrice - medicine.price) / medicine.oldPrice * 100).toFixed(1) %>% OFF</p>
                        <button class="add-to-cart">ADD TO CART</button>
                    </div>
                <% }); %>
            </div>
            <button class="next-slide">&#10095;</button>
        </div>
    </section>
    

    <section class="products1">
        <h2>Deals on Fitness</h2>
        <div class="slider-container">
            <button class="prev-slide">&#10094;</button>
            <div class="product-slider">
                <% fitnessDeals.forEach(deal => { %>
                    <div class="product-card">
                        <img src="<%= deal.image %>" alt="<%= deal.name %>">
                        <h3><%= deal.name %></h3>
                        <p>‚Çπ <%= deal.price.toFixed(2) %> <span class="old-price">‚Çπ <%= deal.oldPrice.toFixed(2) %></span></p>
                        <p class="discount1">GET <%= ((deal.oldPrice - deal.price) / deal.oldPrice * 100).toFixed(0) %>% OFF</p>
                        <button class="add-to-cart1">ADD TO CART</button>
                    </div>
                <% }) %>
            </div>
            <button class="next-slide">&#10095;</button>
        </div>
    </section>
    
    <section class="popular-categories">
        <h2>Popular Categories</h2>
        <div class="categories-container">
            <div class="category">
                <div class="category-box">
                    <img src="https://www.netmeds.com/images/category/prod/thumb/ayush.png" alt="Ayush">
                    <h3>AYUSH</h3>
                </div>
            </div>

            <div class="category">
                <div class="category-box">
                    <img src="https://www.netmeds.com/images/category/prod/thumb/fitness.png" alt="Fitness">
                    <h3>FITNESS</h3>
                </div>
            </div>

            <div class="category">
                <div class="category-box">
                    <img src="https://www.netmeds.com/images/category/v1/665/thumb/devices_1.png" alt="Devices">
                    <h3>DEVICES</h3>
                </div>
            </div>

            <div class="category">
                <div class="category-box personal-care">
                    <img src="https://www.netmeds.com/images/category/prod/thumb/personal_care.png" alt="Personal Care">
                    <h3>PERSONAL CARE</h3>
                </div>
            </div>   
        </div>
    </section>

    <section class="products">
        <h2>Best Sellers in Personal Care</h2>
        <div class="slider-container">
          <button class="prev-slide">&#10094;</button>
          <div class="product-slider">
            <% personalCareProducts.forEach(item => { %>
              <div class="product-card">
                <img src="<%= item.image %>" alt="<%= item.name %>">
                <h3><%= item.name %></h3>
                <p>‚Çπ <%= item.price.toFixed(2) %> <span class="old-price">‚Çπ <%= item.oldPrice.toFixed(2) %></span></p>
                <p class="discount">GET <%= ((item.oldPrice - item.price) / item.oldPrice * 100).toFixed(0) %>% OFF</p>
                <button class="add-to-cart">ADD TO CART</button>
              </div>
            <% }) %>
          </div>
          <button class="next-slide">&#10095;</button>
        </div>
      </section>
      
      <section class="products1">
        <h2>Surgical Super Savers</h2>
        <div class="slider-container">
            <button class="prev-slide">&#10094;</button>
            <div class="product-slider">
                <% surgicalDeals.forEach(item => { %>
                    <div class="product-card">
                        <img src="<%= item.image %>" alt="<%= item.name %>">
                        <h3><%= item.name %></h3>
                        <p class="price">‚Çπ <%= item.price.toFixed(2) %> 
                            <span class="old-price">‚Çπ <%= item.oldPrice.toFixed(2) %></span>
                        </p>
                        <p class="discount1">
                            GET <%= ((item.oldPrice - item.price) / item.oldPrice * 100).toFixed(0) %>% OFF
                        </p>
                        <button class="add-to-cart1">ADD TO CART</button>
                    </div>
                <% }); %>
            </div>
            <button class="next-slide">&#10095;</button>
        </div>
    </section>
    
    <section class="popular-categories">
        <h2>Brands in Focus</h2>
        <div class="categories-container">
            <div class="category">
                <div class="category-box">
                    <img src="https://ik.imagekit.io/anscommerce/image/tr:e-sharpen-01,h-1080,w-1080,cm-pad_resize/data/galderma/08may2024/F43000_1.jpg" alt="Cetaphil">
                    <h3>Cetaphil</h3>
                </div>
            </div>

            <div class="category">
                <div class="category-box">
                    <img src="https://m.media-amazon.com/images/I/61lBgAv8UDL.jpg" alt="Fitness">
                    <h3>Accu-check</h3>
                </div>
            </div>

            <div class="category">
                <div class="category-box">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTOkVksa_GNjv0rwfXSwKmeSA52kyr9Otl7MA&s" alt="Devices">
                    <h3>D-protin</h3>
                </div>
            </div>

            <div class="category">
                <div class="category-box personal-care">
                    <img src="https://m.media-amazon.com/images/I/717v4zE201L.jpg" alt="Personal Care">
                    <h3>Sebamed</h3>
                </div>
            </div>

            <div class="category">
                <div class="category-box personal-care">
                    <img src="https://medeasysave.com/cdn/shop/files/AHA-GLOW-S-FACE-WASH_1080x.jpg?v=1709293754" alt="Personal Care">
                    <h3>Ahaglow</h3>
                </div>
            </div>

        </div>
    </section>

    <section class="products">
        <h2>Spotlight Deals on Devices</h2>
        <div class="slider-container">
          <button class="prev-slide">&#10094;</button>
          <div class="product-slider">
            <% surgicalDevices.forEach(product => { %>
              <div class="product-card">
                <img src="<%= product.image %>" alt="<%= product.name %>">
                <h3><%= product.name %></h3>
                <p class="price">
                  ‚Çπ <%= product.price.toFixed(2) %>
                  <span class="old-price">‚Çπ <%= product.oldPrice.toFixed(2) %></span>
                </p>
                <p class="discount">
                  GET <%= ((product.oldPrice - product.price) / product.oldPrice * 100).toFixed(0) %>% off
                </p>
                <button class="add-to-cart">ADD TO CART</button>
              </div>
            <% }) %>
          </div>
          <button class="next-slide">&#10095;</button>
        </div>
      </section>
      

    <%- include('includes/footer') %>
</body>
</html